@model Compuwreck_001.Models.Shipwreck

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="row">
        <h2 class="pageTitle">Edit Shipwreck Record</h2>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Shipwreck_id)
    </div>
    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="row">
        <div class="large-4 columns">
            @Html.LabelFor(model => model.Type)
            @Html.EditorFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>
        <div class="large-4 columns">
            @Html.LabelFor(model => model.Dimensions)
            @Html.EditorFor(model => model.Dimensions)
            @Html.ValidationMessageFor(model => model.Dimensions)
        </div>
        <div class="large-4 columns">
            @Html.LabelFor(model => model.Tonnage)
            @Html.EditorFor(model => model.Tonnage)
            @Html.ValidationMessageFor(model => model.Tonnage)
        </div>
        <hr />
    </div>
    <div class="row">
        <div class="large-4 columns left">
            @Html.LabelFor(model => model.DateLost)
            @Html.EditorFor(model => model.DateLost)
            @Html.ValidationMessageFor(model => model.DateLost)
        </div>

        <div class="large-4 columns">
            @Html.LabelFor(model => model.County_FK, "County")
            @Html.DropDownList("County_FK", String.Empty)
        </div>

        <div class="large-4 columns">
            @Html.LabelFor(model => model.Locality)
            @Html.EditorFor(model => model.Locality)
            @Html.ValidationMessageFor(model => model.Locality)
        </div>
        <hr />
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.WindDir, "Wind Direction")
            @Html.EditorFor(model => model.WindDir)
            @Html.ValidationMessageFor(model => model.WindDir)
        </div>
        <div class="large-6 columns">
            @Html.LabelFor(model => model.WindForce, "Wind Force")
            @Html.EditorFor(model => model.WindForce)
            @Html.ValidationMessageFor(model => model.WindForce)
        </div>
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Armament)
            @Html.EditorFor(model => model.Armament)
            @Html.ValidationMessageFor(model => model.Armament)
        </div>
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Cargo)
            @Html.EditorFor(model => model.Cargo)
            @Html.ValidationMessageFor(model => model.Cargo)
        </div>
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.References)
            @Html.EditorFor(model => model.References)
            @Html.ValidationMessageFor(model => model.References)
        </div>
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Remarks)
            @Html.EditorFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </div>
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Event_FK, "Event Type")
            @Html.DropDownList("Event_FK", String.Empty)
            @Html.ValidationMessageFor(model => model.Event_FK)
        </div>
        <div class="large-6 columns">
            @Html.LabelFor(model => model.U_Boat)
            @Html.EditorFor(model => model.U_Boat)
            @Html.ValidationMessageFor(model => model.U_Boat)
        </div>
        <hr />
    </div>

    <div class="row">
        <div class="large-12 columns">
            <table class="table">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Edit</th>
                </tr>
                @foreach (var item in Model.Photos) {
                    <tr>
                        <td width="30%"><img src="@Url.Content(item.URL + "/thumbs/" + item.FileName)" width="100" height="90" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td width ="20%">@Html.ActionLink("Delete Photo", "Delete", "Photo", new { photoId = item.Photo_id }, null)</td>
                    </tr>
                }
            </table>
            @Html.ActionLink("Add new Photo", "Create", "Photo", new { shipwreckId = Model.Shipwreck_id }, new { @class = "button right" })
            <br /><br />

        </div>
        <hr />
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "button left" })
        </div>
        <div class="large-6 columns">
            <input type="submit" value="Save" class="button right" />
        </div>
    </div>
}
