        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Shipwreck_id)
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Details, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Details)
            @Html.ValidationMessageFor(model => model.Details)
        </div>
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.FileName, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.FileName)
            @Html.ValidationMessageFor(model => model.FileName)
        </div>
        <div class="large-6 columns">
            @Html.LabelFor(model => model.URL, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.URL)
            @Html.ValidationMessageFor(model => model.URL)
        </div>
    </div>
    <div class="row">
        <div class="large-6 columns">
            @Html.LabelFor(model => model.Source, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Source)
            @Html.ValidationMessageFor(model => model.Source)
        </div>
    </div>

    <div class="row">
        <div class="large-6 columns">
            @Html.ActionLink("Back to Shipwreck", "Index", null, new { @Class = "button" })
        </div>
        <div class="large-6 columns">
            <input type="submit" value="Add Image" class="button right" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

