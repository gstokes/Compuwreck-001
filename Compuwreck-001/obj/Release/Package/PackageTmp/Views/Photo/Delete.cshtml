@model Compuwreck_001.Models.Photo

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <h2 class="pageTitle">Delete Shipwreck Record</h2>
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Photo_id)
    <span class="alert">Are you sure you want to delete this?</span>
</div>


<div class="row">
    <div class="large-6 columns">
        @Html.DisplayNameFor(model => model.Name)
        @Html.DisplayFor(model => model.Name)

        @Html.DisplayNameFor(model => model.Details)
        @Html.DisplayFor(model => model.Details)
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
        @Html.DisplayNameFor(model => model.Source)
        @Html.DisplayFor(model => model.Source)

        @Html.DisplayNameFor(model => model.Shipwreck.Name)
        @Html.DisplayFor(model => model.Shipwreck.Name)
    </div>
    <hr />
</div>

@using (Html.BeginForm()) {
     @Html.AntiForgeryToken()
<div class="row">
    <div class="large-6 columns">
        @Html.ActionLink("Back to Shipwreck", "Edit", "Shipwreck", new { @id = Model.Shipwreck_id }, new { @class = "button" })
    </div>
    <div class="large-6 columns">
        <input type="submit" value="Delete" class="button right" />
    </div>
        
</div>
}


